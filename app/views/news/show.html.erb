<div class="content-div">
  <div class="news-main-item">
    <div class="news-item news-read-item-page">
      <div class="news-date news-main-date"><%= @news.created_at.day %><br><%= I18n.t("date.month_names")[@news.created_at.month] %></div>
      <div class="news-content news-main-content">
        <h2><%= @news.title %></h2>
        <p><%= @news.content %></p>
        <span class="news-read-more"><%= link_to 'ВЕРНУТЬСЯ К СПИСКУ НОВОСТЕЙ', news_index_path %></span>
      </div>
    </div>
  </div>
  <div class="news-div news-read-page">
    <span class="last-news">ПОСЛЕДНИЕ НОВОСТИ</span>

    <%= render partial: 'partials/news', collection: @latest_news, locals: { additional_css: 'news-read-item-page' } %>

  </div>
</div>